@using LibraryAPI.Models

@model IEnumerable<BookDTO>

<h1 class="allbooks-title">All Books</h1>

<p>
    <a asp-action="BookCreate" class="btn btn-outline-primary">
        <i class="fa fa-plus"></i> Create a new book
    </a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(mod => mod.Title)
            </th>
            <th>
                @Html.DisplayNameFor(mod => mod.Author)
            </th>
            <th>
                @Html.DisplayNameFor(mod => mod.Genre)
            </th>
            <th>
                @Html.DisplayNameFor(mod => mod.Published)
            </th>
            
            <th>Availability Status</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Author)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Genre)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Published)
                </td>             
                                
                <td>
                    @if (item.AvaliableForLoan)
                    {
                        <span class="badge bg-success">Available</span>
                    } else
                    {
                        <span class="badge bg-danger">Not Available</span>
                    }
                </td>

                <td>
                    <a asp-action="BookDetails" class="btn btn-info" asp-route-id="@item.BookId">Details <i class="fa fa-edit"></i></a>

                    <a asp-action="UpdateBook" class="btn btn-warning" asp-route-bookId="@item.BookId">Edit <i class="fa fa-edit"></i></a>

                    <a asp-action="DeleteBook" class="btn btn-danger" asp-route-bookId="@item.BookId">Delete <i class="fa fa-trash"></i></a>
                </td>
            </tr>
        }
    </tbody>
</table>
